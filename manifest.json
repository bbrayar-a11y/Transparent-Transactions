    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  
  "screenshots": [
    {
      "src": "screenshots/mobile-dashboard.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Dashboard View"
    },
    {
      "src": "screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop Dashboard View"
    }
  ],
  
  "categories": [
    "finance",
    "business",
    "productivity"
  ],
  
  "lang": "en-US",
  "dir": "ltr",
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+transparent",
      "url": "/?transaction=%s"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Send Money",
      "short_name": "Send",
      "description": "Quickly send money to contacts",
      "url": "/dashboard.html?action=send",
      "icons": [
        {
          "src": "icons/shortcut-send.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Transactions",
      "short_name": "Transactions",
      "description": "Check your transaction history",
      "url": "/dashboard.html?action=transactions",
      "icons": [
        {
          "src": "icons/shortcut-transactions.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Profile",
      "short_name": "Profile",
      "description": "View and edit your profile",
      "url": "/dashboard.html?action=profile",
      "icons": [
        {
          "src": "icons/shortcut-profile.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "permissions": [
    "notifications",
    "storage"
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "none",
  
  "file_handlers": [],
  
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "iarc_rating_id": "",
  
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "secure"
  ],
  
  "author": "Transparent Transactions Team",
  
  "precomposed_icons": [
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192"
    }
  ]
}
