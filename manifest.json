{
  "name": "Transparent Transactions",
  "short_name": "Transparent",
  "description": "Secure, transparent, and instant money transfers with built-in trust verification",
  "version": "1.0.0",
  "version_name": "1.0.0",
  
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "orientation": "portrait-primary",
  
  "theme_color": "#2E8B57",
  "background_color": "#FFFFFF",
  
